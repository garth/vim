syntax on
execute pathogen#infect()
filetype plugin indent on
colorscheme garth
set runtimepath^=~/.vim/bundle/ctrlp
set number
set dir=~/.vim/swap//
set guifont=DejaVu\ Sans\ Mono:h13
set lines=44 columns=140
set smartindent
set tabstop=2
set shiftwidth=2
set expandtab
set linespace=1
let g:netrw_liststyle=3

